body
  // font-family: neo-sans, sans-serif;
  font-family -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-size $--base-font-size
  color $--color-text-regular
#app
  height:100%;
  &::before
    position: fixed;
    top:0;
    left:0;
    display: block;
    width: 100%;
    height: 3px;
    background-image: linear-gradient(to right, #73d2f6, #0fbcf9 22%, #7fc400 36%, #ffd583 48%, #ffb21e 63%, #ff4d4d 76%, #575fcf);
    content: '';
    -webkit-flex-shrink: 0;
    -ms-flex-negative: 0;
    flex-shrink: 0;
    z-index 100
  .theme-container
    height 100%
.page
  padding-left $--sidebar-width

.navbar
  position fixed
  z-index 20
  top 0
  left 0
  right 0
  height $navbarHeight
  background-image linear-gradient(to right, $--color-primary, #2196f3)
  box-sizing border-box
  // border-bottom 1px solid $borderColor
  // box-shadow: 0 2px 8px #f0f1f2;
.sidebar-mask
  position fixed
  z-index 9
  top 0
  left 0
  width 100vw
  height 100vh
  display none

.sidebar
  font-size 16px
  background-color #fafafa
  width $--sidebar-width
  position fixed
  z-index 10
  margin 0
  top $navbarHeight
  left 0
  bottom 0
  box-sizing border-box
  border-right 1px solid $borderColor
  overflow-y auto

{$contentClass}:not(.custom)
  @extend $wrapper
  > *:first-child
    margin-top $navbarHeight

  a:hover
    text-decoration underline

  p.demo
    padding 1rem 1.5rem
    border 1px solid #ddd
    border-radius 4px

  img
    max-width 100%

{$contentClass}.custom
  padding 0
  margin 0

  img
    max-width 100%

a
  font-weight 500
  color $--color-primary
  text-decoration none

p a code
  font-weight 400
  color $--color-info

kbd
  background #eee
  border solid 0.15rem #ddd
  border-bottom solid 0.25rem #ddd
  border-radius 0.15rem
  padding 0 0.15em

blockquote
  font-size 1rem
  color rgba(0,0,0,.65);
  border-left .2rem solid #dfe2e5
  margin 1rem 0
  padding .25rem 0 .25rem 1rem
  background #a0a0a00f
  & > p
    margin 0

ul, ol
  padding-left 1.2em

strong
  font-weight 600

h1, h2, h3, h4, h5, h6
  font-weight 600
  line-height 1.25
  color rgba(0,0,0,.85)

  {$contentClass}:not(.custom) > &
    margin-top (0.5rem - $navbarHeight)
    padding-top ($navbarHeight + 0.5rem)
    margin-bottom 0

    &:first-child
      margin-top -1.5rem
      margin-bottom 1rem

      + p, + pre, + .custom-block
        margin-top 1rem

  &:hover .header-anchor
    opacity: 1

h1
  font-size 1.55rem

h2
  font-size 1.35rem
  padding-bottom .3rem
  border-bottom 0px solid $borderColor

h3
  font-size 1.15rem
  padding-bottom .3rem

a.header-anchor
  font-size 0.85em
  float left
  margin-left -0.87em
  padding-right 0.23em
  margin-top 0.125em
  opacity 0

  &:hover
    text-decoration none

code, kbd, .line-number
  font-family source-code-pro, Menlo, Monaco, Consolas, "Courier New", monospace

p, ul, ol
  line-height 1.7

hr
  border 0
  border-top 1px solid $borderColor

table
  border-collapse collapse
  margin 1rem 0
  // display: block
  overflow-x: auto
  max-width 100%
  th
    background-color: #f7f7f7;
tr
  border-top 1px solid #dfe2e5

  &:nth-child(2n)
    background-color #f6f8fa

th, td
  border 1px solid #dfe2e5
  padding .6em 1em

.theme-container
  &.sidebar-open
    .sidebar-mask
      display: block

  &.no-navbar
    {$contentClass}:not(.custom) > h1, h2, h3, h4, h5, h6
      margin-top 1.5rem
      padding-top 0

    .sidebar
      top 0
.go-to-top
  background #00000091
  height: 2rem;
  border-radius: 10%;
  color #fff !important;
  padding 1rem

@media (min-width: ($MQMobile + 1px))
  .theme-container.no-sidebar
    .sidebar
      display none
    .page
      padding-left 0
.search-box
  .suggestions
    box-shadow  0 6px 10px 0 rgba(0,0,0,.14), 0 1px 18px 0 rgba(0,0,0,.12), 0 3px 5px -1px rgba(0,0,0,.4) !important
    border 0 none !important
    top 2.2rem !important
    border-radius 3px !important
  input
    border-radius: .2rem !important
    border: 0px solid #cecece !important
    background rgba(0,0,0,.26) url(/assets/img/search.83621669.svg) 0.6rem 0.65rem no-repeat !important
.search-box input:focus
  background #fff url(/assets/img/search.83621669.svg) 0.6rem 0.65rem no-repeat !important

@require 'mobile.styl'
